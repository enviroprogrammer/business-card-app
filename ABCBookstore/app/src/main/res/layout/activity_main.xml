<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.abcbookstore.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".85"
        android:scaleType="centerCrop"
        android:src="@drawable/books" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:padding="8dp"
        android:text="ABC Bookstore"
        android:textColor="#FFCDD2"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:paddingLeft="8dp"
        android:text="At ABC Bookstore, we are very passionate about books. For over a decade, we have satisfied many customers with our wide variety of books to choose from and our reasonable book prices."
        android:textColor="#E1BEE7"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="4dp"
        android:background="#00838F"
        android:fontFamily="serif"
        android:padding="8dp"
        android:text="Tel: 647-384-3412"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/number"
        android:background="#00838F"
        android:fontFamily="serif"
        android:padding="8dp"
        android:text="75 Main St, Toronto, ON M5F 3B4"
        android:textColor="#9FA8DA"
        android:textSize="20sp" />


</RelativeLayout>
